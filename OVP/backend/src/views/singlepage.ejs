<%- include('partials/header'); -%>

<main class="container">
    <div class="bg-light p-5 rounded">
      <h1>all videos present in server of you </h1>
      <div class="row">
        <% users.forEach(function(user){ %>
        <div class="col-3 mx-auto">
          <div>
            <center>
              <video id="videoPlayer" controls width="100%" height="100%">
                <% var url_text='http://localhost:8000/videos/' %>
                <source src="<%= url_text+user.video_url%>" type="video/mp4" />
              </video>
            </center>
  
            <% var id_text='http://localhost:8000/singlepage/' %>
  
            <a
              href="<%= id_text+user._id%>"
              style="text-decoration: none; text-align: center"
              ><p><%= user.title%></p>
  
              <div class="d-grid gap-2 mx-auto">
                <button class="btn btn-warning" type="button">
                  Update Fields
                </button>
              </div>
            </a>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </main>


  <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  

      
  </body>
</html>
