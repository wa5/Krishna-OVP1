<%- include('../partials/header2'); -%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container-fluid">
    <%- include('../partials/navbar'); -%>
    <br>
    <div class="row">
        <% movies.forEach(function(movies){ %>
        <div class="col-3 mx-auto">
          <div>
            <center>
              <video id="videoPlayer" controls width="100%" height="100%">
                <% var url_text='http://localhost:8000/videos/' %>
                <source src="<%= url_text+movies.video_url%>" type="video/mp4" />
              </video>
            </center>
  
            <% var id_text='http://localhost:8000/singlepage/' %>
  
            <a
              href="<%= id_text+movies._id%>"
              style="text-decoration: none; text-align: center"
              ><p><%= movies.title%> &nbsp; <i onclick="myFunction(this)" class="fa fa-thumbs-up"></i> <i style="color:red ;"  class="fa fa-thumbs-down"></i></p>
  
              <div class="d-grid gap-2 mx-auto">
                <% if (user._id==movies.userid) { %>
                    
                    <button class="btn btn-warning" type="button">
                        Update Fields
                      </button>
                    <% } %>
                
              </div>
            </a>
          </div>
        </div>
        <% }); %>
      </div>
</div>
<script>
    const clip = document.querySelectorAll(".hover-to-play");
for (let i = 0; i < clip.length; i++) { clip[i].addEventListener("mouseenter", function (e) { clip[i].play();
  }); clip[i].addEventListener("mouseout", function (e) { clip[i].pause(); }); }
</script>
<script>
    function myFunction(x) {
  x.classList.toggle("fa-thumbs-down");
}
</script>